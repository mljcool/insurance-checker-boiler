{
  "version": "1.0",
  "manifest_version": 2,
  "name": "MyCRM Inurance Checker",
  "description": "Insurance Checker for Firefox and Chrome extensions.",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/js/browser-polyfill.js",
        "lib/js/jquery.min.js",
        "lib/js/util.js",
        "lib/js/mappers.js",
        "lib/js/services.js",
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": ["lib/js/browser-polyfill.js", "background.js"]
  },
  "browser_action": {
    "default_icon": "img/icons/icon128.png",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "unlimitedStorage", "https://mycrm.nzfsg.co.nz/*"],
  "icons": {
    "128": "img/icons/icon128.png",
    "48": "img/icons/icon48.png",
    "16": "img/icons/icon16.png"
  },
  "web_accessible_resources": ["sidebar.html"],

  "options_ui": {
    "page": "./options.html",
    "open_in_tab": true
  }
}
